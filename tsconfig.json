{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [ "es6", "esnext" ],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "noImplicitAny": false,
    "declaration": true
  },
  "lib": [ "es6", "esnext" ],
  "exclude": [
    "node_modules",
    "__mocks__",
    "dist",
  ]
}
